        let currentMode = '';
        let currentIndex = 0;
        let audioCtx = new (window.AudioContext || window.webkitAudioContext)();

        function startGame(mode) {
            currentMode = mode;
            currentIndex = Math.floor(Math.random() * wordBank.length);
            showScreen(mode === 'guess' ? 'screen-guess' : 'screen-describe');
            
            if(mode === 'guess') {
                setupGuessRound();
            } else {
                setupDescribeRound();
            }
        }

        // --- MODE ENDEVINAR ---
        function setupGuessRound() {
            const item = wordBank[currentIndex];
            const clueText = document.getElementById('clue-text');
            const optionsDiv = document.getElementById('guess-options');
            const feedback = document.getElementById('feedback-guess');
            
            feedback.innerText = "";
            optionsDiv.innerHTML = "";
            
            // Generar 3 opcions (la correcta + 2 aleatÃ²ries)
            let options = [item];
            while(options.length < 4) {
                let randomItem = wordBank[Math.floor(Math.random() * wordBank.length)];
                if(!options.includes(randomItem)) options.push(randomItem);
            }
            options.sort(() => Math.random() - 0.5);

            options.forEach(opt => {
                const card = document.createElement('div');
                card.className = 'card';
                card.innerText = opt.icona;
                card.onclick = () => checkAnswer(opt.paraula === item.paraula);
                optionsDiv.appendChild(card);
            });

            speak(item.pistes[0]);
            clueText.innerText = "Escolta la pista...";
        }

        function checkAnswer(isCorrect) {
            const feedback = document.getElementById('feedback-guess');
            if(isCorrect) {
                playTone(600, 0.2); // So d'Ã¨xit
                feedback.innerText = "ğŸŒŸ Molt bÃ©! Ets un gran detectiu!";
                setTimeout(() => {
                    currentIndex = (currentIndex + 1) % wordBank.length;
                    setupGuessRound();
                }, 2000);
            } else {
                playTone(200, 0.3); // So d'error suau
                feedback.innerText = "Torna-ho a provar, tu pots!";
            }
        }

        function repeatClue() {
            speak(wordBank[currentIndex].pistes[0]);
        }

        // --- MODE EXPLICAR ---
        function setupDescribeRound() {
            const item = wordBank[currentIndex];
            document.getElementById('target-image').innerText = item.icona;
            const qIndex = Math.floor(Math.random() * item.preguntes.length);
            document.getElementById('guide-question').innerText = "Pista per ajudar-te: " + item.preguntes[qIndex];
            speak("Explica'm quÃ¨ veus. " + item.preguntes[qIndex]);
        }

        function nextDescribe() {
            currentIndex = (currentIndex + 1) % wordBank.length;
            setupDescribeRound();
        }

        // --- UTILITATS ---
        function showScreen(id) {
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            document.getElementById(id).classList.add('active');
        }

        function showStart() { showScreen('screen-start'); }

        function togglePedagogy() {
            const modal = document.getElementById('pedagogical-modal');
            modal.style.display = modal.style.display === 'block' ? 'none' : 'block';
        }

        function speak(text) {
            const msg = new SpeechSynthesisUtterance();
            msg.text = text;
            msg.lang = 'ca-ES';
            msg.rate = 0.9;
            window.speechSynthesis.speak(msg);
        }

        function playTone(freq, duration) {
            const osc = audioCtx.createOscillator();
            const gain = audioCtx.createGain();
            osc.connect(gain);
            gain.connect(audioCtx.destination);
            osc.frequency.value = freq;
            gain.gain.setValueAtTime(0.1, audioCtx.currentTime);
            gain.gain.exponentialRampToValueAtTime(0.0001, audioCtx.currentTime + duration);
            osc.start();
            osc.stop(audioCtx.currentTime + duration);
        }
    </script>
</body>
</html>
